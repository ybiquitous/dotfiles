{
  "name": "@ybiquitous/dotfiles",
  "private": true,
  "license": "UNLICENSED",
  "author": "ybiquitous",
  "repository": "ybiquitous/dotfiles",
  "homepage": "https://github.com/ybiquitous/dotfiles#readme",
  "scripts": {
    "lint": "npm-run-all --print-name --print-label --parallel lint:*",
    "lint:md": "markdownlint --ignore node_modules \"**/*.md\"",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "commit": "commit"
  },
  "lint-staged": {
    "*.{sh,bash}": "shellcheck",
    "*.md": "markdownlint"
  },
  "devDependencies": {
    "@commitlint/prompt-cli": "7.0.0",
    "ybiq": "3.0.0"
  }
}
