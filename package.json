{
  "name": "@ybiquitous/dotfiles",
  "private": true,
  "license": "UNLICENSED",
  "author": "ybiquitous",
  "repository": "ybiquitous/dotfiles",
  "homepage": "https://github.com/ybiquitous/dotfiles#readme",
  "scripts": {
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint:md:fix": "prettier --write \"**/*.md\"",
    "lint:js": "eslint --ignore-path .gitignore --ext .js,.jsx,.mjs .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "commit": "commit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{sh,bash}": "shellcheck",
      "*.{js,jsx,mjs}": [
        "eslint --fix --no-ignore",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "markdownlint",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@commitlint/prompt-cli": "7.2.1",
    "eslint-config-ybiquitous": "6.2.0",
    "ybiq": "5.0.1"
  }
}
