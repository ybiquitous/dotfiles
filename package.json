{
  "name": "@ybiquitous/dotfiles",
  "private": true,
  "license": "UNLICENSED",
  "author": "ybiquitous",
  "repository": "ybiquitous/dotfiles",
  "scripts": {
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier": "prettier --ignore-path .gitignore .",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write"
  },
  "devDependencies": {
    "eslint-config-ybiquitous": "^13.0.0",
    "ybiq": "^11.4.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{sh,bash}": "shellcheck",
    "*.{js,jsx,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "aspell",
          "apt",
          "bash",
          "brew",
          "commitlint",
          "deps",
          "emacs",
          "git",
          "heroku",
          "iterm2",
          "js",
          "readme",
          "ruby",
          "travis",
          "yarn",
          "zsh"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/node"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    },
    "sign": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "lint-no-heading-punctuation",
      [
        "lint-list-item-bullet-indent",
        false
      ],
      [
        "lint-list-item-indent",
        false
      ],
      "validate-links"
    ]
  }
}
