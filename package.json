{
  "name": "@ybiquitous/dotfiles",
  "private": true,
  "license": "UNLICENSED",
  "author": "ybiquitous",
  "repository": "ybiquitous/dotfiles",
  "type": "module",
  "scripts": {
    "test": "npm run lint",
    "lint": "ybiq run --npm lint:js lint:md lint:commit lint:styles",
    "lint:commit": "commitlint --from HEAD~10",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:js": "eslint --cache --no-error-on-unmatched-pattern",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:styles": "npm run prettier -- --check",
    "lint:styles:fix": "npm run prettier -- --write",
    "prettier": "prettier --cache .",
    "format": "ybiq run --npm lint:js:fix lint:md:fix lint:styles:fix",
    "clean": "git clean -dx --force --exclude=node_modules",
    "prepare": "git config --local core.hooksPath .githooks",
    "commit-scope": "npm pkg get \"commitlint.rules.scope-enum[2]\""
  },
  "devDependencies": {
    "remark-preset-ybiquitous": "^0.5.0",
    "ybiq": "^21.0.0"
  },
  "lint-staged": {
    "*.{sh,bash}": "shellcheck",
    "*.{js,jsx,cjs,mjs,ts,tsx}": "eslint --cache --fix",
    "!(**/*.snap)": "prettier --cache --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        300
      ],
      "scope-enum": [
        2,
        "always",
        [
          "aspell",
          "apt",
          "bash",
          "brew",
          "commitlint",
          "deps",
          "deps-dev",
          "docker",
          "emacs",
          "git",
          "github",
          "ghostty",
          "heroku",
          "iterm2",
          "java",
          "js",
          "markdown",
          "music",
          "readme",
          "ruby",
          "rust",
          "shell",
          "terraform",
          "travis",
          "yarn",
          "zsh"
        ]
      ]
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  }
}
