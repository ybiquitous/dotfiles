{
  "name": "@ybiquitous/dotfiles",
  "private": true,
  "license": "UNLICENSED",
  "author": "ybiquitous",
  "repository": "ybiquitous/dotfiles",
  "scripts": {
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint:js": "eslint --ignore-path .gitignore --ext .js,.jsx,.mjs .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier:write": "prettier --write --ignore-path .gitignore \"**/*.{html,json,md,yaml,yml}\"",
    "format": "npm-run-all --print-label --parallel lint:js:fix prettier:write"
  },
  "devDependencies": {
    "eslint-config-ybiquitous": "^7.0.0",
    "ybiq": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{sh,bash}": [
        "shellcheck"
      ],
      "*.{js,jsx,mjs}": [
        "eslint --fix --no-ignore",
        "git add"
      ],
      "*.md": [
        "markdownlint --ignore CHANGELOG.md"
      ],
      "*.{html,json,md,yaml,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "bash",
          "brew",
          "commitlint",
          "deps",
          "emacs",
          "git",
          "readme",
          "ruby",
          "zsh"
        ]
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    }
  }
}
