# common
export HISTFILE=$HOME/.history
export HISTSIZE=50000
export EDITOR='emacs'

# java
export JAVA_HOME=/usr/lib/jvm/java-7-openjdk-amd64
export JAVA_OPTS='-server -Xmx512m -XX:MaxPermSize=128m'
export MAVEN_OPTS='-server -ea -Xmx512m -Xms128m -XX:MaxPermSize=128m -Djava.awt.headless=true'
export ANT_OPTS="$MAVEN_OPTS"
export PATH=$JAVA_HOME/bin:$PATH

# perl
[ -f $HOME/perl5/perlbrew/etc/bashrc ] && source $HOME/perl5/perlbrew/etc/bashrc
export PERL_CPANM_OPT="--prompt --reinstall --mirror http://ftp.jaist.ac.jp/pub/CPAN/"

# general
export PATH=$HOME/bin:$PATH
export MANPATH=$HOME/man:$MANPATH
