# Inspiration from http://gggritso.com/human-git-aliases

[user]
	name = Masafumi Koba
	email = ybiquitous@gmail.com
[alias]
	d = diff
	g = grep
	s = status
	diff-staged = diff --cached
	graph = log --graph
	detail = show --pretty=full
	pull-prune = pull --prune
	switch-branch = checkout
	new-branch = checkout -b
	rename-branch = branch --move
	delete-branch = branch -D
	unstage = reset --quiet HEAD --
	master = checkout master
	discard = checkout --
	amend = commit --amend
	summary = status --short --untracked-files
	grep-group = grep --line-number --heading --break
	grep-word = grep --word-regexp
	rewrite = rebase --interactive
	tags = tag
	branches = branch --all
	stashes = stash list
	remotes = remote --verbose
	aliases = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	edit-config = config --edit --global
	list-config = config --list
	open = browse
[format]
	pretty = format:%C(auto)%h  %Creset%<(72,trunc)%s %Cgreen%aN%Creset, %ar %C(auto)%d
[color]
	ui = auto
[push]
	default = current
[pager]
	diff = diff-highlight | less
	show = diff-highlight | less
	log = diff-highlight | less
[commit]
	verbose = true
[diff]
	compactionHeuristic = true
	indentHeuristic = true
	algorithm = patience
[core]
	excludesfile = /Users/koba/.gitignore_global
